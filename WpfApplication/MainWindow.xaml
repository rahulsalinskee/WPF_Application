<Window Hello:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Hello="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
      
    </Window.Resources>

    <StackPanel Height="120" Width="380">
        <CheckBox Name="CheckBox" IsChecked="False" Content="Check Me"></CheckBox>
        <Button Name="ToBlue" Content="Change Color To Yellow" Margin="-7,-80,7,140" Click="ToBlue_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="OrangeRed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=CheckBox, Path=IsChecked}"  Value="True">
                            <Setter Property="Foreground" Value="Blue" />
                            <Setter Property="FontWeight" Value="ExtraBold" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </StackPanel>
</Window>
